{minimum_otp_vsn, "20.1"}.

{erl_opts, [debug_info]}.

{deps, [
        {enacl, {git, "https://github.com/aeternity/enacl.git",
                 {ref, "26180f4"}}}
       ]}.

{dialyzer, [
            {warnings, [unknown]},
            {plt_apps, all_deps},
            {base_plt_apps, [erts, kernel, stdlib]}
           ]}.

{relx, [{release, {aessembler, "0.0.1"},
         [aebytecode, enacl]},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.
